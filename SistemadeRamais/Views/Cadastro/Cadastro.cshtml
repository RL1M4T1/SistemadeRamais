@model CadastroModel

@{
    ViewData["Title"] = "Incluir - Cadastro de Ramais";
}

<h2 style="text-align:center">Incluir - Cadastro de Ramais</h2>
    
<form asp-controller="Cadastro" asp-action="Criar" >
    <div class="col-auto">
        <div class="mb-3">
            <label for="Filial" class="form-label">Filial</label>
            <input type="text" asp-for="FILIAL_VC_RAMAL" class="form-control" id="1"  placeholder="Informe a filial do Colaborador"required >
            @Html.ValidationMessageFor(x => x.FILIAL_VC_RAMAL)
        </div>

        <div class="form-group">
            <label for="Colaborador">Colaborador</label>
            <input type="text" asp-for="COLABORADOR_VC_RAMAL" class="form-control" id="2" placeholder="Informe o nome do colaborador"required >
            @Html.ValidationMessageFor(x => x.COLABORADOR_VC_RAMAL)
        </div>
        <div class="mb-3">
            <label for="Setor" class="form-label">Setor</label>
            <input type="text" asp-for="SETOR_VC_RAMAL" class="form-control" id="3" placeholder="Informe o setor"required >
            @Html.ValidationMessageFor(x => x.SETOR_VC_RAMAL)
        </div>

        <div class="mb-3">
            <label for="Ramal" class="form-label">Ramal</label>
            <input type="text" asp-for="RAMAL_CH_RAMAL" class="form-control" id="4  " placeholder="Informe o ramal"required >
            @Html.ValidationMessageFor(x => x.RAMAL_CH_RAMAL)
        </div>   
            <div class="mb-3">
                <button type="submit" class="btn btn-primary mb-3">Confirmar</button>
                <button type="submit" asp-controller="Cadastro" asp-action="Index" class="btn btn-danger mb-3">Cancelar</button>
            </div>
        </div>
</form>

